<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/magnitude_text_view_view_earthquake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_textview_red"
        android:gravity="center"
        android:text="8"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/place_text_view_view_earthquake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Где"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/time_text_view_view_earthquake"
        app:layout_constraintStart_toEndOf="@+id/magnitude_text_view_view_earthquake"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/near_text_view_view_earthquake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Рядом"
        android:textColor="#0000FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/time_text_view_view_earthquake"
        app:layout_constraintStart_toEndOf="@+id/magnitude_text_view_view_earthquake"
        app:layout_constraintTop_toBottomOf="@+id/place_text_view_view_earthquake" />

    <TextView
        android:id="@+id/time_text_view_view_earthquake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Время"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>